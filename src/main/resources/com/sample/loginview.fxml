<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="680" prefWidth="825.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sample.controllers.LoginController">
   <children>
      <AnchorPane prefHeight="297.0" prefWidth="296.0">
         <children>
            <Label layoutX="118.0" layoutY="23.0" text="Login">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <TextField fx:id="txtLoginUsername" layoutX="58.0" layoutY="78.0" promptText="Username">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <PasswordField fx:id="txtLoginPassword" layoutX="58.0" layoutY="128.0" promptText="Password">
               <font>
                  <Font size="14.0" />
               </font>
            </PasswordField>
            <Button layoutX="58.0" layoutY="187.0" mnemonicParsing="false" onAction="#btnLogin" prefWidth="70.4" text="Login">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button layoutX="164.0" layoutY="187.0" mnemonicParsing="false" onAction="#btnNewUser" text="Register">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label fx:id="lblLoginError" alignment="CENTER" layoutX="18.0" layoutY="163.0" prefHeight="18.0" prefWidth="252.0" textFill="RED" />
            <Button fx:id="btnAdmin" layoutX="226.0" layoutY="10.0" mnemonicParsing="false" onAction="#changeToCustomer" prefHeight="27.0" prefWidth="51.0" text="User" />
            <Button layoutX="17.0" layoutY="10.0" mnemonicParsing="false" onAction="#changeToAdmin" text="Admin" />
         </children>
      </AnchorPane>
   </children>
</VBox>
